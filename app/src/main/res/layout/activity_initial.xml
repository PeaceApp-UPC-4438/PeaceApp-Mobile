<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:layout_margin="0dp"
    tools:context=".StartingPoint.InitialActivity"
    android:background="@drawable/main_background"
    >
    <LinearLayout
        android:id="@+id/ll_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="145dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_big_logo"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_bold"
            android:text="PeaceApp"
            android:textColor="@color/peaceapp_green"
            android:textSize="40sp"
            />
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Vive en paz"
            android:textColor="@color/peaceapp_green"
            android:textSize="16sp"
            android:layout_marginTop="-8dp"/>


        <Button
            android:id="@+id/btn_start_now"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Comienza ahora"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/peaceapp_green"
            android:textColor="@color/white"
            android:layout_marginHorizontal="50dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_height="48dp"
            android:text="Iniciar sesiÃ³n"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_medium"
            android:backgroundTint="@color/initial_button_gray"
            android:textColor="@color/peaceapp_green"
            app:strokeColor="@color/peaceapp_green"
            app:strokeWidth="1.3dp"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>